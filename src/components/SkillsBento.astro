---
import Tag from "./Tag.astro";

type SkillGroup = { group: string; items: string[] };
type Props = { groups: SkillGroup[] };

const { groups } = Astro.props as Props;
---
<div class="reveal grid gap-4 md:grid-cols-12">
  {groups.map((g, idx) => (
    <div class={`glass p-6 ${idx === 0 ? "md:col-span-6" : idx === 1 ? "md:col-span-6" : "md:col-span-12"}`}>
      <p class="text-xs uppercase tracking-wide text-muted-fg">{g.group}</p>
      <div class="mt-4 flex flex-wrap gap-2">
        {g.items.map((s) => <Tag text={s} />)}
      </div>
    </div>
  ))}
</div>
