---
type Props = {
  name:
    | "linkedin"
    | "whatsapp"
    | "email"
    | "certificate"
    | "external";
  size?: number;
  className?: string;
  title?: string;
};

const { name, size = 16, className = "", title } = Astro.props as Props;

const base = `inline-block align-[-0.125em] ${className}`;
const stroke = "currentColor";
const fill = "currentColor";
---

{name === "linkedin" && (
  <svg
    class={base}
    width={size}
    height={size}
    viewBox="0 0 24 24"
    role="img"
    aria-label={title ?? "LinkedIn"}
  >
    <title>{title ?? "LinkedIn"}</title>
    <path
      d="M4.98 3.5c0 1.11-.9 2.01-2.01 2.01S.96 4.61.96 3.5 1.86 1.5 2.97 1.5s2.01.9 2.01 2.01ZM1.24 22h3.45V7.86H1.24V22Zm7.01 0h3.45v-7.59c0-2.03.39-3.99 2.91-3.99 2.48 0 2.51 2.32 2.51 4.12V22h3.45v-8.19c0-4.02-.86-7.11-5.55-7.11-2.25 0-3.75 1.23-4.37 2.39h-.05V7.86H8.25V22Z"
      fill={fill}
    />
  </svg>
)}

{name === "whatsapp" && (
  <svg
    class={base}
    width={size}
    height={size}
    viewBox="0 0 24 24"
    role="img"
    aria-label={title ?? "WhatsApp"}
  >
    <title>{title ?? "WhatsApp"}</title>
    <!-- Simple chat/phone glyph (brand-agnostic) -->
