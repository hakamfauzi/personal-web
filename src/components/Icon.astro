      d="M12 2a9.5 9.5 0 0 0-8.06 14.55L3 22l5.62-.92A9.5 9.5 0 1 0 12 2Zm0 2a7.5 7.5 0 1 1-3.1 14.34l-.33-.15-3.3.54.56-3.05-.2-.35A7.47 7.47 0 0 1 12 4Z"
      fill={fill}
    />
    <path
      d="M9.1 8.5c.2-.45.4-.46.6-.46h.6c.19 0 .44.07.67.51.23.44.8 1.4.87 1.5.07.1.12.23.02.38-.1.15-.15.24-.3.37-.15.14-.32.3-.46.4-.15.1-.3.21-.13.5.17.29.77 1.26 1.66 2.04 1.14.98 2.1 1.28 2.4 1.42.3.14.47.12.65-.08.18-.2.74-.86.94-1.16.2-.3.4-.25.67-.16.27.09 1.7.8 1.99.95.29.15.48.22.55.34.07.12.07.7-.17 1.38-.24.68-1.4 1.34-1.92 1.44-.52.1-1.2.15-1.95-.12-.46-.15-1.05-.34-1.8-.67-3.17-1.37-5.24-4.73-5.4-4.95-.16-.22-1.28-1.7-1.28-3.25 0-1.54.8-2.3 1.08-2.61.28-.3.61-.38.81-.38Z"
      fill={fill}
      opacity="0.9"
    />
  </svg>
)}

{name === "email" && (
  <svg
    class={base}
    width={size}
    height={size}
    viewBox="0 0 24 24"
    role="img"
    aria-label={title ?? "Email"}
  >
    <title>{title ?? "Email"}</title>
    <path
      d="M20 6H4c-1.1 0-2 .9-2 2v8c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2Zm0 2-8 5L4 8h16Zm0 10H4V9.24l7.4 4.62c.37.23.83.23 1.2 0L20 9.24V18Z"
      fill={fill}
    />
  </svg>
)}

{name === "certificate" && (
  <svg
    class={base}
    width={size}
    height={size}
    viewBox="0 0 24 24"
    role="img"
    aria-label={title ?? "Certificate"}
  >
    <title>{title ?? "Certificate"}</title>
    <path
      d="M6 2h12a2 2 0 0 1 2 2v9a5 5 0 0 0-2-1.54V4H6v16h6.2c.1.7.33 1.38.67 2H6a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2Z"
      fill={fill}
      opacity="0.9"
    />
    <path
      d="M10 7h8v2h-8V7Zm0 4h6v2h-6v-2Zm9.5 3.2a3.3 3.3 0 1 0 0 6.6 3.3 3.3 0 0 0 0-6.6Zm0 1.9a1.4 1.4 0 1 1 0 2.8 1.4 1.4 0 0 1 0-2.8Z"
      fill={fill}
    />
  </svg>
)}

{name === "external" && (
  <svg
    class={base}
    width={size}
    height={size}
    viewBox="0 0 24 24"
    role="img"
    aria-label={title ?? "Open"}
  >
    <title>{title ?? "Open"}</title>
    <path
      d="M14 3h7v7h-2V6.41l-9.3 9.3-1.4-1.42 9.3-9.29H14V3ZM5 5h6v2H7v10h10v-4h2v6H5V5Z"
      fill={fill}
    />
  </svg>
)}
