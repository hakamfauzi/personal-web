---
type Achievement = {
  title: string;
  issuer: string;
  year: string;
  link?: string;
  note?: string;
};

type Props = { items: Achievement[] };
const { items } = Astro.props as Props;

const isLink = (href?: string) => href && href !== "#" && !href.startsWith("#");
---
<div class="reveal grid gap-4 sm:grid-cols-2">
  {items.map((a) => (
    <div class="glass p-6">
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0">
          <h3 class="text-base font-semibold leading-snug">{a.title}</h3>
          <p class="mt-1 text-sm text-muted-fg">{a.issuer}</p>
        </div>
        <p class="text-xs text-muted-fg">{a.year}</p>
      </div>

      {a.note ? <p class="mt-3 text-sm text-fg/90">{a.note}</p> : null}
      {isLink(a.link) ? (
        <a class="mt-4 inline-flex text-sm link text-muted-fg hover:text-fg" href={a.link} target="_blank" rel="noreferrer">
          Proof â†—
        </a>
      ) : null}
    </div>
  ))}
</div>
